# This file is used by GitHub Actions for CI/CD
# It contains non-sensitive environment variables

# Node Environment
NODE_ENV=production

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=legisflow_admin
DB_DATABASE=legisflow_prod
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SSL=true

# JWT Configuration
JWT_EXPIRATION=1d

# API Configuration
BACKEND_PORT=3000
CORS_ORIGIN=https://legisflow.example.com
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Frontend Configuration
FRONTEND_PORT=3001
NEXT_PUBLIC_API_URL=https://api.legisflow.example.com/api

# S3 Storage (MinIO)
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
S3_ENDPOINT=http://minio:9000
S3_BUCKET=legisflow_prod

# SMS Gateway (Optional)
SMS_PROVIDER=none
SMS_SENDER_ID=LegisFlow

# Payment Gateway (Optional)
PAYMENT_PROVIDER=none
PAYMENT_CALLBACK_URL=https://api.legisflow.example.com/api/payments/callback

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_TTL=60

# Docker Configuration
DOCKER_USER=technestintl

