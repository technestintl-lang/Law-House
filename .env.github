# GitHub Actions environment variables
# Non-sensitive environment variables for CI/CD pipeline

# Database configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=legisflow
DB_USER=postgres
# DB_PASSWORD should be set as a GitHub secret

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379

# API configuration
API_PORT=3000
API_PREFIX=/api
API_TIMEOUT=30000

# Frontend configuration
NEXT_PUBLIC_API_URL=http://backend:3000/api
NEXT_PUBLIC_APP_URL=https://legisflow.example.com

# JWT configuration
JWT_EXPIRES_IN=1d
# JWT_SECRET should be set as a GitHub secret

# Logging
LOG_LEVEL=info

# Docker build configuration
DOCKER_BUILDKIT=1

